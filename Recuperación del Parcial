  \node[main node] (3) [below right of=2] {3};
  \node[main node] (4) [above right of=3] {4};
  \node[main node] (5) [below of=1, left of=6] {5};
  \node[main node] (6) [below left of=3] {6};
  \node[main node] (7) [below right of=3] {7};

  \path[every node/.style={font=\sffamily\small}]
    (1) edge node [left] {} (2)
        edge [bend left=45] node [above right] {} (4)
		edge node [left] {} (3)
		edge node [left] {} (5)
		edge node [left] {} (6)
    (2) edge node [left] {} (3)
    	edge node [left] {} (4)
    	edge node [left] {} (5)
    	edge node [left] {} (6)
    (3) edge node [left] {} (5)
    	edge node [left] {} (6)
    	edge node [left] {} (7)
    (4)	edge node [left] {} (3)
    	edge node [left] {} (7)
    (5)	edge node [left] {} (6);

\end{tikzpicture}

\end{center}

