\section{Pregunta 4}

$a\oplus b = b\oplus a$\\

$P(0) = a + b = b + a$\\

$a(0) = 0 + b = b, b + 0 = b$\\

$P(a) = a + b = b + a$\\

$P(s(a)) = s(a) + b = b + s(a)$\\

$b + s(a) = s(b + a)= s(a + b)$\\

${s(a + b) = s(a) + b}$\\

\section{Pregunta 5}\\

$a\geq b =$
$\left\{
\begin{array}{ll}
s(o)  & \mbox{si } b = o \\
o & \mbox{si } a = o \\
i\geq j & \mbox{si } a = s(i)\ \&\ b = s(j)
\end{array}
\right.$\\
                
$(n + n \ge n)$\\

$n = s(0)$\\

$s(0) + s(0) \ge s(0)$\\

$s(s(0)) \ge s(0)$\\

$s(s(0)) - s(0) \ge 0$\\

$s(0) \ge 0$

